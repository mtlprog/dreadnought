{
  "name": "@dreadnought",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "lint:fix": "eslint . --fix",
    "lint:packages": "eslint packages/",
    "lint:apps": "eslint apps/",
    "typecheck": "bun run type-check",
    "type-check": "tsc --noEmit",
    "test": "bun --filter '*' test",
    "build": "bun --filter '*' run build",
    "check": "bun run type-check && bun run lint",
    "verify": "bun run lint && bun run typecheck && bun run test && bun run build"
  },
  "dependencies": {
    "effect": "^3.11.0",
    "@effect/platform": "latest",
    "@effect/platform-bun": "latest",
    "@effect/platform-node": "^0.97.1",
    "@effect/schema": "latest"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "latest",
    "@happy-dom/global-registrator": "^19.0.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
